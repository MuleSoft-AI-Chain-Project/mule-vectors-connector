{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "text-segments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": {
            "type": "integer"
          },
          "text": {
            "type": "string"
          }
        },
        "required": ["index", "text"]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "file_type": {
          "type": "string"
        },
        "absolute_directory_path": {
          "type": "string"
        },
        "file_name": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["text-segments"]
}

